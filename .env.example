# ========================================
# Skriptendruck Konfiguration
# ========================================

# Basis-Pfade
# -----------
BASE_PATH=H:/stud/fsmb/03_Dienste/01_Skriptendruck
ORDERS_PATH=01_Auftraege
OUTPUT_PATH=output

# LDAP Konfiguration (HS Regensburg Active Directory)
# ------------------
# Aktiviert LDAP-Authentifizierung
LDAP_ENABLED=false

# LDAP Server (ohne Protokoll-Präfix)
LDAP_SERVER=adldap.hs-regensburg.de
LDAP_PORT=636
LDAP_USE_SSL=true

# LDAP Base DN für Benutzersuche
LDAP_BASE_DN=dc=hs-regensburg,dc=de

# Bind DN für LDAP-Authentifizierung (empfohlen)
# Format: abc12345@hs-regensburg.de (Accountname ersetzen)
LDAP_BIND_DN=abc12345@hs-regensburg.de
LDAP_BIND_PASSWORD=dein_passwort

# Search Filter (samAccountName für HS Regensburg)
LDAP_SEARCH_FILTER=samAccountName={username}

# Fallback-Dateien
# ----------------
USERS_CSV_PATH=data/users_fallback.csv
BLACKLIST_PATH=data/blacklist.txt

# Preise (in Euro)
# ----------------
PRICE_SW=0.04
PRICE_COLOR=0.10
PRICE_BINDING_SMALL=1.00
PRICE_BINDING_LARGE=1.50
PRICE_FOLDER=0.50

# Seitengrenzen
# -------------
MIN_PAGES=1
MAX_PAGES_SMALL_BINDING=320
MAX_PAGES_LARGE_BINDING=600

# Bindungsgrößen
# --------------
BINDING_SIZES_PATH=data/binding_sizes.json

# Excel Export
# ------------
EXCEL_ABRECHNUNGSLISTE=Abrechnungsliste.xlsx
EXCEL_AUFTRAGSLISTE=Auftragsliste.xlsx

# Performance
# -----------
PARALLEL_PROCESSING=true
MAX_WORKERS=4

# Logging
# -------
LOG_LEVEL=INFO
# Optional: Log-Datei aktivieren
#LOG_FILE=skriptendruck.log
